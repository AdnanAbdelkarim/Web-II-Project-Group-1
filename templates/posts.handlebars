<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Posts</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>

<body>
    <nav {{!-- class="navbar navbar-expand-lg bg-body-tertiary" --}} class="navbar navbar-light mb-3"
        style="background-image: linear-gradient(to left top, #44074e, #670c73, #8d119a, #b613c2, #e112eb);">
        <div class="container-fluid">
            <a class="navbar-brand" href="/standard"> ðŸ‘ˆ Dashboard</a>
        </div>
    </nav>


    <div class="container">
        <h1 class="text-center">Posts</h1>
        <hr>
        <h2 class="mt-5">
            Create Post
        </h2>
        <div class="card p-5 mb-5">

            {{#if errors}}
            <div class="alert alert-danger" role="alert">
                <ul class="people_list">
                    {{#each errors}}
                    <li>{{this}}</li>
                    {{/each}}
                </ul>
            </div>
            {{/if}}

            {{#if success}}
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <strong>Success !</strong>{{success}}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
            {{/if}}

            <form action="/posts" method="post" enctype="multipart/form-data">
                <div class="form-floating">
                    <textarea class="form-control" placeholder="Leave a comment here" id="floatingTextarea2"
                        style="height: 100px" name="textContent"></textarea>
                    <label for="floatingTextarea2">Add your text here</label>
                </div>

                <div class="mb-3">
                    <label for="formFile" class="form-label">Upload Picture</label>
                    <input  class="form-control" name="post_pic" type="file" id="formFile" accept="image/*" />
                </div>

                <button type="submit" class="btn btn-primary mt-3">Submit</button>

            </form>
        </div>


        <hr>
        <h2>All Posts</h2>
        {{#if posts}}
        <div class="row">
            {{#each posts}}

            <div class="col-4 mb-5">
                <div class="card" style="width: 18rem;">
                    {{#if this.filePath}}
                    <img src="{{this.filePath}}" class="card-img-top" alt="...">
                    {{else}}
                    <img src="https://i0.wp.com/sunrisedaycamp.org/wp-content/uploads/2020/10/placeholder.png?ssl=1"
                        class="card-img-top" alt="...">
                    {{/if}}

                    <div class="card-body">
                        {{#if this.textContent}}
                        <p class="card-text">{{this.textContent}}</p>
                        {{/if}}
                    </div>
                </div>
            </div>

            {{/each}}
        </div>
        {{/if}}
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
</body>

</html>