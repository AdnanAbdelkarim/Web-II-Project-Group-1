
<h1 class="text-center">Posts</h1>
<hr>
<h2 class="mt-5">
    Create Post
</h2>
<div class="card p-5 mb-5">

    {{#if errors}}
    <div class="alert alert-danger" role="alert">
        <ul class="people_list">
            {{#each errors}}
            <li>{{this}}</li>
            {{/each}}
        </ul>
    </div>
    {{/if}}

    {{#if success}}
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <strong>Success !</strong>{{success}}
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    {{/if}}

    <form action="/posts" method="post" enctype="multipart/form-data">
        <div class="form-floating">
            <textarea class="form-control" placeholder="Leave a comment here" id="floatingTextarea2"
                style="height: 100px" name="textContent"></textarea>
            <label for="floatingTextarea2">Add your text here</label>
        </div>

        <div class="mb-3">
            <label for="formFile" class="form-label">Upload Picture</label>
            <input  class="form-control" name="post_pic" type="file" id="formFile" accept="image/*" />
        </div>

        <button type="submit" class="btn btn-primary mt-3">Submit</button>

    </form>
</div>


<hr>
<h2>All Posts</h2>
{{#if posts}}
<div class="row">
    {{#each posts}}

    <div class="col-4 mb-5">
        <div class="card" style="width: 18rem;">
            {{#if this.filePath}}
            <img src="{{this.filePath}}" class="card-img-top" alt="...">
            {{else}}
            <img src="https://i0.wp.com/sunrisedaycamp.org/wp-content/uploads/2020/10/placeholder.png?ssl=1"
                class="card-img-top" alt="...">
            {{/if}}

            <div class="card-body">
                {{#if this.textContent}}
                <p class="card-text">{{this.textContent}}</p>
                {{/if}}
            </div>
        </div>
    </div>

    {{/each}}
</div>
{{/if}}
</div>
